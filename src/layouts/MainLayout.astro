---
// src/layouts/MainLayout.astro
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
    <script is:inline src="/scripts/app.js" defer></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/alpinejs@3.15.0/dist/cdn.min.js" defer></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
    <script is:inline src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js" defer></script>
  </head>
  <body class="d-flex h-100 text-body bg-light">
    <div class="sidebar bg-white border-end vh-100 p-3" style="width: 250px; min-width: 250px;" x-data="playlists">
      <button class="btn btn-light btn-sm sidebar-toggle" onclick="toggleSidebar()" aria-label="Collapse playlists" title="Collapse playlists">⟨</button>
      <h5 class="mb-3 pe-4">Playlists</h5>
      <ul class="list-group" id="playlist-list"></ul>
      <button class="btn btn-primary mt-3 w-100" @click="const name = prompt('Enter playlist name:'); if (name) addPlaylist(name)">New Playlist</button>
    </div>
    <button class="btn btn-light btn-sm sidebar-reveal" onclick="toggleSidebar()" aria-label="Expand playlists" title="Expand playlists">⟩</button>
    <main class="flex-grow-1 p-3 overflow-auto">
      <slot />
      <div class="fixed-bottom bg-dark text-white p-3" style="z-index: 1000;">
        <audio id="player" class="plyr-audio" controls crossorigin="anonymous" playsinline>
          <source src="" type="audio/mpeg" />
          Your browser doesn't support audio.
        </audio>
      </div>
    </main>
  </body>
</html>